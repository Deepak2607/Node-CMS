  <div class="row">
      
  <div class="col-md-4">
  <h2>Edit Category</h2>
  <form action="/admin/categories/edit/{{category._id}}?_method=PUT" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" maxlength="30" id="name" class="form-control" required placeholder="Enter Name" value={{category.name}}>
  </div>
  <button type="submit" style="cursor:pointer" class="btn btn-primary">Update category</button>
  </form>
  </div>
      
</div>